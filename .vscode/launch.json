    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Application",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "energy_prices:flask_app",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run",
                "--no-debug"
            ],
            "jinja": false,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.environment/development.env"
        },
    ]
}